{
  "id": "file:/serializers/api/title.json#",
  "type": "object",
  "title": "Title",
  "properties": {
    "id": {
      "type": "integer",
      "description": "ID",
      "examples": [1]
    },
    "title": {
      "type": "string",
      "description": "Title",
      "examples": ["Made in Abyss"]
    },
    "description": {
      "type": "string",
      "description": "Description",
      "examples": ["Description"]
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "published"],
      "description": "Status",
      "examples": ["draft"]
    },
    "publication_status": {
      "type": "string",
      "enum": ["ongoing", "completed", "cancelled"],
      "description": "Publication status",
      "examples": ["ongoing"]
    },
    "views_count": {
      "type": "integer",
      "description": "Views count",
      "examples": [1]
    },
    "bookmarks_count": {
      "type": "integer",
      "description": "Bookmarks count",
      "examples": [1]
    },
    "favorites_count": {
      "type": "integer",
      "description": "Favorites count",
      "examples": [1]
    },
    "original_content_language": {
      "oneOf": [
        {
          "$ref": "file:/serializers/api/content_language.json#"
        },
        {
          "type": "null"
        }
      ]
    },
    "cover": {
      "oneOf": [
        {
          "type": "object",
          "description": "File",
          "properties": {
            "url": {
              "type": "string",
              "description": "Link",
              "examples": ["http://example.com/eyJ...3d6/cover.jpg"]
            },
            "filename": {
              "type": "string",
              "description": "Filename",
              "examples": ["cover.jpg"]
            },
            "content_type": {
              "type": "string",
              "description": "Content type",
              "examples": ["image/jpeg"]
            },
            "width": {
              "oneOf": [
                {
                  "type": "integer",
                  "description": "Width",
                  "examples": [1600]
                },
                {
                  "type": "null"
                }
              ]
            },
            "height": {
              "oneOf": [
                {
                  "type": "integer",
                  "description": "Height",
                  "examples": [2261]
                },
                {
                  "type": "null"
                }
              ]
            },
            "byte_size": {
              "type": "integer",
              "description": "Size in bytes",
              "examples": [1167999]
            },
            "created_at": {
              "type": "string",
              "format": "date-time",
              "description": "Date of creation",
              "examples": ["2020-12-13T00:00:00.000Z"]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "writers": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/writer.json#"
      }
    },
    "painters": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/painter.json#"
      }
    },
    "genres": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/genre.json#"
      }
    },
    "formats": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/format.json#"
      }
    },
    "demographics": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/demographic.json#"
      }
    },
    "marks": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/mark.json#"
      }
    },
    "themes": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/theme.json#"
      }
    },
    "sent_to_review_at": {
      "type": "string",
      "format": "date-time",
      "description": "Sent to review date",
      "examples": ["2020-12-13T00:00:00.000Z"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date of creation",
      "examples": ["2020-12-13T00:00:00.000Z"]
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date of last update",
      "examples": ["2020-12-13T00:00:00.000Z"]
    }
  }
}