{
  "id": "file:/serializers/api/user.json#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "username": {
      "type": "string"
    },
    "name": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "surname": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "sex": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["male", "female", "other"]
        },
        {
          "type": "null"
        }
      ]
    },
    "avatar": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "content_type": {
              "type": "string"
            },
            "width": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ]
            },
            "height": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "favorites_count": {
      "type": "integer"
    },
    "bookmarks_count": {
      "type": "integer"
    },
    "views_count": {
      "type": "integer"
    },
    "access_rights": {
      "type": "array",
      "items": {
        "$ref": "file:/serializers/api/access_right.json#"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}